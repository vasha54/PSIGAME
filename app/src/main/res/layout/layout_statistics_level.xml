<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/border_round_8dip"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/text_view_name_level"
                style="@style/CustomTextTitleLevelStatistics"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:text="@string/app_name"
                android:textAlignment="textStart" />
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#c0c0c0"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_count_games"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/count_games"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_count_games"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_first_game"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/first_game"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_first_games"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty_date"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/p_last_game"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/last_game"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>

                <TextView
                        android:id="@+id/v_last_game"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty_date"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_best_score"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/best_score"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_best_game"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_worst_score"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/worst_score"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_worst_score"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_mean_score"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/mean_score"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_mean_score"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_games_before_accept"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/games_before_accept"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_games_before_accept"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/p_date_first_accept"
                        style="@style/CustomTextPropertyLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="@string/date_first_accept"
                        android:textAlignment="textStart"
                        android:layout_weight="0.4"/>
                <TextView
                        android:id="@+id/v_date_first_accept"
                        style="@style/CustomTextValueLevelStatistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/value_empty_date"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"/>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>