<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            <TextView
                    android:id="@+id/text_view_sentence"
                    style="@style/SentenceQTrueOfFalse"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_round_8dip"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:text="@string/descriptions_part_one" >
            </TextView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:orientation="horizontal">
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.6" />
                <ToggleButton
                        android:id="@+id/toggle_button_true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textOff="@string/title_button_true"
                        android:textOn="@string/title_button_true"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/button_true"
                        android:fontFamily="@font/tt_interfaces_bold"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.6" />
                <ToggleButton
                        android:id="@+id/toggle_button_false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textOff="@string/title_button_false"
                        android:textOn="@string/title_button_false"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/button_false"
                        android:fontFamily="@font/tt_interfaces_bold"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.6" />
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>