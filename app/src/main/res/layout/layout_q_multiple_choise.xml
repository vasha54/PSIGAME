<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_text_introduction"
                style="@style/TitleQMultipleChoise"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:background="@drawable/border_round_8dip"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_text_introduction"
                style="@style/SentenceQMultipleChoise"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:id="@+id/text_view_sentence_mc"
                android:background="@drawable/border_round_8dip"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_choise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scrollbars="vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>