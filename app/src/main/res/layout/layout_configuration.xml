<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
<LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/bannerSpace"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_round_8dip"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_below="@id/bannerSpace">

        <ScrollView
                android:id="@+id/SCROLLER_ID_CONFIG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:fillViewport="true"
                android:scrollbars="vertical" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="@string/title_reset_stadistics"
                              android:layout_weight="0.45"
                              android:layout_gravity="center"
                              android:gravity="center|start"
                              android:textAlignment="textStart"
                              android:textColor="@color/black"/>

                    <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_reset_white"
                            android:background="@drawable/button_standar"
                            android:id="@+id/button_reset_stadistics"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:paddingLeft="5dp"
                        android:layout_margin="4dp"
                        android:paddingRight="5dp"
                        android:background="#c0c0c0"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="@string/title_reset_register"
                              android:layout_weight="0.45"
                              android:layout_gravity="center"
                              android:gravity="center|start"
                              android:textAlignment="textStart"
                              android:textColor="@color/black"/>

                    <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_reset_white"
                            android:background="@drawable/button_standar"
                            android:id="@+id/button_reset_register_user"/>
                </LinearLayout>






            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerSpace"/>
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>