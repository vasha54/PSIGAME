<resources>
    <style name="Widget.Theme.PSIGAME.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PSIGAME.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="CustomTextViewVersion" parent="android:Theme">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#323331</item>
    </style>

    <style name="CustomTextView" parent="android:Theme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#323331</item>
    </style>

    <style name="CustomTextViewDescription" parent="android:Theme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#323331</item>
    </style>

    <style name="CustomTextTitleLevelStatistics" parent="android:Theme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#323331</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextPropertyLevelStatistics" parent="android:Theme">
        <item name="android:textSize">14sp</item>
