    </style>
    <style name="CustomTextInformationQuizzTime" parent="android:Theme">
        <item name="android:textSize">38dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SentenceQTrueOfFalse" parent="android:Theme">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SentenceQMultipleChoise" parent="android:Theme">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#000000</item>
